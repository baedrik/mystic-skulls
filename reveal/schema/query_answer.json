{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QueryAnswer",
  "description": "responses to queries",
  "anyOf": [
    {
      "description": "displays the admins list",
      "type": "object",
      "required": [
        "admins"
      ],
      "properties": {
        "admins": {
          "type": "object",
          "required": [
            "admins"
          ],
          "properties": {
            "admins": {
              "description": "current admin list",
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "description": "displays the minting status",
      "type": "object",
      "required": [
        "mint_status"
      ],
      "properties": {
        "mint_status": {
          "type": "object",
          "required": [
            "minting_has_halted"
          ],
          "properties": {
            "minting_has_halted": {
              "description": "true if minting has halted",
              "type": "boolean"
            }
          }
        }
      }
    },
    {
      "description": "displays the mint counts",
      "type": "object",
      "required": [
        "mint_counts"
      ],
      "properties": {
        "mint_counts": {
          "type": "object",
          "required": [
            "by_background",
            "total"
          ],
          "properties": {
            "by_background": {
              "description": "mint counts broken down by background variant",
              "type": "array",
              "items": {
                "$ref": "#/definitions/BackgroundCount"
              }
            },
            "total": {
              "description": "total mint count",
              "type": "integer",
              "format": "uint16",
              "minimum": 0.0
            }
          }
        }
      }
    },
    {
      "description": "displays the nft contract information",
      "type": "object",
      "required": [
        "nft_contract"
      ],
      "properties": {
        "nft_contract": {
          "type": "object",
          "required": [
            "nft_contract"
          ],
          "properties": {
            "nft_contract": {
              "$ref": "#/definitions/ContractInfo"
            }
          }
        }
      }
    },
    {
      "description": "displays the svg server information",
      "type": "object",
      "required": [
        "svg_server"
      ],
      "properties": {
        "svg_server": {
          "type": "object",
          "required": [
            "svg_server"
          ],
          "properties": {
            "svg_server": {
              "$ref": "#/definitions/ContractInfo"
            }
          }
        }
      }
    },
    {
      "description": "displays the multi sig address",
      "type": "object",
      "required": [
        "multi_sig"
      ],
      "properties": {
        "multi_sig": {
          "type": "object",
          "required": [
            "address"
          ],
          "properties": {
            "address": {
              "$ref": "#/definitions/HumanAddr"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "BackgroundCount": {
      "description": "background count",
      "type": "object",
      "required": [
        "background",
        "count"
      ],
      "properties": {
        "background": {
          "description": "name of the background variant",
          "type": "string"
        },
        "count": {
          "description": "number of tokens minted with this background",
          "type": "integer",
          "format": "uint16",
          "minimum": 0.0
        }
      }
    },
    "ContractInfo": {
      "description": "code hash and address of a secret contract",
      "type": "object",
      "required": [
        "address",
        "code_hash"
      ],
      "properties": {
        "address": {
          "description": "contract's address",
          "allOf": [
            {
              "$ref": "#/definitions/HumanAddr"
            }
          ]
        },
        "code_hash": {
          "description": "contract's code hash string",
          "type": "string"
        }
      }
    },
    "HumanAddr": {
      "type": "string"
    }
  }
}
