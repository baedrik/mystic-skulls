{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "HandleAnswer",
  "description": "Responses from handle functions",
  "anyOf": [
    {
      "description": "response of both AddAdmins and RemoveAdmins",
      "type": "object",
      "required": [
        "admins_list"
      ],
      "properties": {
        "admins_list": {
          "type": "object",
          "required": [
            "admins"
          ],
          "properties": {
            "admins": {
              "description": "current admins",
              "type": "array",
              "items": {
                "$ref": "#/definitions/HumanAddr"
              }
            }
          }
        }
      }
    },
    {
      "description": "response from creating a viewing key",
      "type": "object",
      "required": [
        "viewing_key"
      ],
      "properties": {
        "viewing_key": {
          "type": "object",
          "required": [
            "key"
          ],
          "properties": {
            "key": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "type": "object",
      "required": [
        "revoke_permit"
      ],
      "properties": {
        "revoke_permit": {
          "type": "object",
          "required": [
            "status"
          ],
          "properties": {
            "status": {
              "type": "string"
            }
          }
        }
      }
    },
    {
      "description": "list of keyphrases",
      "type": "object",
      "required": [
        "keyphrase_list"
      ],
      "properties": {
        "keyphrase_list": {
          "type": "object",
          "required": [
            "keyphrases"
          ],
          "properties": {
            "keyphrases": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Keyphrase"
              }
            }
          }
        }
      }
    },
    {
      "description": "response from attempting to solve a puzzle",
      "type": "object",
      "required": [
        "solve"
      ],
      "properties": {
        "solve": {
          "type": "object",
          "required": [
            "result"
          ],
          "properties": {
            "result": {
              "$ref": "#/definitions/SolveResponse"
            }
          }
        }
      }
    }
  ],
  "definitions": {
    "HumanAddr": {
      "type": "string"
    },
    "Keyphrase": {
      "description": "keyphrase and puzzle id",
      "type": "object",
      "required": [
        "keyphrase",
        "puzzle"
      ],
      "properties": {
        "keyphrase": {
          "description": "sanitized keyphrase",
          "type": "string"
        },
        "puzzle": {
          "description": "puzzle id",
          "type": "string"
        }
      }
    },
    "SolveResponse": {
      "type": "string",
      "enum": [
        "winner",
        "wrong_answer",
        "already_solved"
      ]
    }
  }
}
